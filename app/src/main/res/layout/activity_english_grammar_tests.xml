<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EnglishGrammarTests">

    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:alignmentMode="alignMargins"
        android:columnCount="1"
        android:columnOrderPreserved="false"
        android:padding="15dp"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/test1EngGrammar"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/engGrammarTest1"
            app:cardCornerRadius="40dp"
            app:cardElevation="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/question1Icon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:contentDescription="@string/question1"
                        android:layout_marginStart="16dp"
                        app:srcCompat="@drawable/circle_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:layout_marginStart="5dp"
                    android:text="@string/identification_of_nouns"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="#0537B6"
                    android:textSize="26sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/test2EngGrammar"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/engGrammarTest2"
            app:cardCornerRadius="40dp"
            app:cardElevation="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/question2Icon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="16dp"
                        android:contentDescription="@string/reading_eng_grammar"
                        app:srcCompat="@drawable/circle_2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:layout_marginStart="22dp"
                    android:text="@string/general_english"
                    android:textAllCaps="true"
                    android:textColor="#0537B6"
                    android:textSize="26sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>