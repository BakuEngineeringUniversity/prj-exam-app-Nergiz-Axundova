<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".cardView.EnglishCardView">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:id="@+id/gridLayout4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:alignmentMode="alignMargins"
            android:columnCount="1"
            android:columnOrderPreserved="false"
            android:padding="15dp"
            android:rowCount="4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/b4"
                app:cardCornerRadius="40dp"
                app:cardElevation="70dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/listeningIcon"
                        android:layout_width="130dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="16dp"
                        android:contentDescription="@string/listening"
                        app:srcCompat="@drawable/listening" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="39dp"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/listening"
                        android:textAllCaps="true"
                        android:textColor="@color/detailTextColor"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/reading"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/b3"
                app:cardCornerRadius="40dp"
                app:cardElevation="70dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/readingIcon"
                        android:layout_width="130dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="16dp"
                        android:contentDescription="@string/reading"
                        app:srcCompat="@drawable/reading" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/reading"
                        android:textAllCaps="true"
                        android:textColor="@color/detailTextColor"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/writing"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/b2"
                app:cardCornerRadius="40dp"
                app:cardElevation="70dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/writingIcon"
                        android:layout_width="130dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="16dp"
                        android:contentDescription="@string/writing"
                        app:srcCompat="@drawable/writing" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/writing"
                        android:textAllCaps="true"
                        android:textColor="@color/detailTextColor"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/grammarEng"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/b1"
                app:cardCornerRadius="40dp"
                app:cardElevation="70dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/grammarIcon"
                        android:layout_width="130dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="16dp"
                        android:contentDescription="@string/grammar"
                        app:srcCompat="@drawable/grammar_eng" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="39dp"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/grammar"
                        android:textAllCaps="true"
                        android:textColor="@color/detailTextColor"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>